<mvc:View
    controllerName="com.bts.zbts.controller.ProjectDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page 
        title="{viewData>/ProjectName} ({viewData>/ProjectCode})" 
        showNavButton="true" 
        navButtonPress=".onNavBack" 
        class="sapUiContentPadding sapUiSizeCompact">
        
        <content>
            <IconTabBar 
                id="idDetailTabBar" 
                expanded="true" 
                stretchContentHeight="true" 
                headerMode="Inline">
                
                <items>
                    <IconTabFilter icon="sap-icon://tree" text="WBS" key="wbs">
                        <core:Fragment fragmentName="com.bts.zbts.view.fragments.wbs.WBS" type="XML" />
                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://map" text="Location" key="loc">
                         <core:Fragment fragmentName="com.bts.zbts.view.fragments.Location" type="XML" />
                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://form" text="Daily Log" key="log">
                         <core:Fragment fragmentName="com.bts.zbts.view.fragments.DailyLog" type="XML" />
                    </IconTabFilter>

                    <IconTabFilter icon="sap-icon://manager-insight" text="Report" key="rep">
                         <core:Fragment fragmentName="com.bts.zbts.view.fragments.Report" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://manager-insight" text="Report" key="rep">
                         <core:Fragment fragmentName="com.bts.zbts.view.fragments.ReportLayout" type="XML" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button 
                    text="Lưu thay đổi" 
                    icon="sap-icon://save" 
                    type="Emphasized" 
                    press=".onSaveProject"
                    visible="{viewConfig>/visible/btnSave}" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>