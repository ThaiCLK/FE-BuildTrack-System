<mvc:View
    controllerName="com.bts.zbts.controller.ProjectManagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page id="pageProjectManagement" title="Project List" showNavButton="false" class="myCustomWideContent">
        <content>
            <VBox class="sapUiSmallMargin">
                <Table id="idProjectsTable" items="{/ProjectSet}" growing="true" growingThreshold="14" mode="None"> 
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Project Database" level="H2"/>
                            <ToolbarSpacer/>
                            <SearchField width="20%" placeholder="Find..." liveChange=".onSearch"/>
                            <Button icon="sap-icon://add" text="Create Project" type="Emphasized" visible="{userInfo>/canCreateProject}" press=".onAddProject"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="5rem"><Text text="Project ID" /></Column>
                        <Column width="14rem"><Text text="Project Name" /></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Type" /></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Start Date" /></Column>
                        <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Est. End Date" /></Column>
                        <Column hAlign="Center"><Text text="Status" /></Column>
                        <Column width="9rem" hAlign="End"><Text text="Action" /></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Navigation" press=".onPressProject">
                            <cells>
                                <ObjectIdentifier title="{ProjectCode}"/>
                                <Text text="{ProjectName}" wrapping="false" />
                                <Text text="{path: 'ProjectType', formatter: '.formatProjectType'}" />
                                <Text text="{path: 'StartDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' }}"/>
                                <Text text="{path: 'EndDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' }}"/>
                                <ObjectStatus 
                                    text="{path: 'Status', formatter: '.formatStatusText'}" 
                                    state="{path: 'Status', formatter: '.formatStatusState'}" 
                                    icon="{= ${Status} === 'CLOSED' ? 'sap-icon://locked' : '' }"
                                />
                                <HBox justifyContent="End">
                                    <Button icon="sap-icon://edit" type="Transparent" tooltip="Edit" visible="{userInfo>/canCreateProject}" press=".onEditProject" class="sapUiTinyMarginEnd"/> 
                                    <Button icon="sap-icon://delete" type="Transparent" tooltip="Delete" visible="{userInfo>/canCreateProject}" press=".onDeleteProject"/> 
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>