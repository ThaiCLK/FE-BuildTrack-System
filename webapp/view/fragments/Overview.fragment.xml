<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <form:SimpleForm editable="false" layout="ResponsiveGridLayout" title="General Information" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
        <form:content>
            <Label text="Project ID" /> <Text text="{viewData>/ProjectID}" />
            <Label text="Project Name" /> <Text text="{viewData>/ProjectName}" />
            <Label text="Status" />
            <ObjectStatus
                text="{path: 'viewData>/Status', formatter: '.formatStatusText'}"
                state="{path: 'viewData>/Status', formatter: '.formatStatusState'}"
                icon="{path: 'viewData>/Status', formatter: '.formatStatusIcon'}" />
            <Label text="Project Type" /> <Text text="{viewData>/ProjectType}" />
            <Label text="Manager" />      <Text text="{viewData>/Manager}" />
            <Label text="Location" />     <Text text="{viewData>/Location}" />
            <Label text="Start Date" />   <Text text="{viewData>/StartDate}" />
            <Label text="End Date" />     <Text text="{viewData>/EndDate}" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>